// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique  
  hash String
  salt String

  profile Profile?
  links SharingLink[]
  order Order?
}

model Profile {
  id Int @id @default(autoincrement())
  firstName String
  lastName String

  ownerId Int @unique
  owner User @relation(fields: [ownerId], references: [id])
}

model SharingLink {
  id Int @id @default(autoincrement())
  text String
  platformId Int

  ownerId Int
  owner User @relation(fields: [ownerId], references: [id])
}

model Order {
  id Int @id @default(autoincrement())
  order Int[]

  ownerId Int @unique
  owner User @relation(fields: [ownerId], references: [id])
}

